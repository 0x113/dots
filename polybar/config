[colors]
black  = #1f1c21
red    = ${xrdb:color1}
yellow = ${xrdb:color4}
blue   = ${xrdb:color2}
gray   = #8b858e
;white  = #f2f3f4
white   = #D5CFC9

[dims]
padding = 1

[bar/main]
width    = 281
height   = 27
offset-x = 545.75
offset-y = 3%


;radius            = 5
monitor           = HDMI2
;monitor = ${env:MONITOR:}
override-redirect = true

font-0 = Lemon:pixelsize=8;1
font-1 = FontAwesome:pixelsize=8;1
font-2 = Siji:pixelsize=7;2
font-3 = unifont:pixelsize=8
font-4 = Iosevka Medium:size=7;1

background = ${colors.black}
foreground = ${colors.red}

;modules-left   = mpd-go
modules-center = who memory date volume battery
;modules-right  = volume battery

fixed-center  = true
#wm-restack    = bspwm
tray-position = right
tray-maxsize  = 20

bottom = true

[module/who]
type              = custom/script
exec              = ~/.config/scripts/who
interval          = 3.0
format-padding    = 3
format-background = ${colors.white}
format-foreground = ${colors.black}

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-foreground = ${colors.white}
format-background = ${colors.black}
label = %percentage_used%%
format-padding = 2

; Battery
[module/battery]
type    = internal/battery
battery = BAT0
adapter = ACAD
full-at = 95

format-padding = 1

format-charging            = <ramp-capacity> <label-charging>
format-charging-foreground = ${colors.black}
format-charging-background = ${colors.white}
format-charging-padding    = ${dims.padding}

format-discharging            = <ramp-capacity> <label-discharging>
format-discharging-background = ${colors.white}
format-discharging-foreground = ${colors.black}
format-discharging-padding    = ${dims.padding}

format-full            = <ramp-capacity> <label-full>
format-full-background = ${colors.white}
format-full-foreground = ${colors.black}
format-full-padding    = ${dims.padding}

label-charging = "%percentage%%  "
label-discharging = "%percentage%%  "
label-full        = "%percentage%% "

label-discharging-foreground = ${colors.black}
label-charging-foreground = ${colors.black}
label-full-foreground = ${colors.black}

ramp-capacity-0 = ""
ramp-capacity-1 = ""
ramp-capacity-2 = ""
ramp-capacity-3 = ""
ramp-capacity-foreground = ${colors.black}

; Date
[module/date]
type = internal/date
interval = 1.0

date = "%d.%m"

;time-alt = %a %d %b
time     = %H:%M

label             = "%date% %time%"
format            = "<label>"
format-foreground = ${colors.black}
format-background = ${colors.white}
format-padding    = 2

; Volume
[module/volume]
type = internal/pulseaudio

format-volume = <ramp-volume><label-volume>
label-volume = "%percentage%% "
label-volume-foreground = ${colors.white}
format-volume-background= ${colors.black}
label-volume-padding = ${dims.padding}

ramp-headphone-0 = " "
ramp-headphone-1 = " "

ramp-volume-0 = " "
ramp-volume-1 = " "
ramp-volume-2 = " "
ramp-volume-foreground = ${colors.white}

format-muted = <label-muted>
label-muted = " mut "
label-muted-foreground = ${colors.gray}
label-muted-background = ${colors.black}
label-muted-padding = ${dims.padding}
