bottom = true



[module/i3]
type = internal/i3
pin-workspaces = false
strip-wsnumbers = true
index-sort = true
enable-click = false
enable-scroll = false
wrapping-scroll = false
reverse-scroll = false
fuzzy-match = true

format-padding = 2

label-focused = %index%
label-focused-foreground = ${colors.black}
label-focused-background = ${colors.white}
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-foreground = ${colors.white}
label-unfocused-background = ${colors.black}
label-unfocused-padding = 1

label-urgent = %index%
label-urgent-foreground = ${colors.white}
label-urgent-background = ${colors.black}
label-urgent-padding = 1

label-visible = %index%
label-visible-foreground = ${colors.white}
label-visible-background = ${colors.black}
label-visible-padding = 1

[module/who]
type              = custom/script
exec              = ~/.config/scripts/who
format            = <label>
format-padding    = 2
format-background = ${colors.white}
format-foreground = ${colors.black}
label = "ÓÇü %output%"

[module/mpd]
type = internal/mpd

; Host where mpd is running (either ip or domain name)
; Can also be the full path to a unix socket where mpd is running.
host = 127.0.0.1
port = 6600
label-song = %artist% - %title%
label-offline = üéú mpd is offline
label-song-foreground = ${colors.white}
label-song-background = ${colors.black}
label-song-padding = 2


; Seconds to sleep between progressbar/song timer sync
; Default: 1
interval = 2

[module/network]
type = internal/network
interface = wlo1
interval = 3.0
udspeed-minwidth = 5
accumulate-stats = true
unknown-as-up = true

format-connected = <label-connected>
label-connected = %local_ip% (%essid%)
format-connected-margin = 3
format-connected-foreground=${colors.white}
format-connected-background=${colors.black}
format-connected-padding = 2


[module/wlan]
