gray   = #8b858e
white = #c1cbc8

[dims]
padding = 1

[bar/main]
width    = 313
height   = 27
offset-x = 527.5
offset-y = 3%


;radius            = 5
;monitor           = HDMI2
monitor = ${env:MONITOR:}
